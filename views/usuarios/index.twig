{% extends "layout/default/template.twig" %}
{% block title %}{{title}}{% endblock %}

{% block content %}

<div class="card">
    <div class="card-body">
        <h1 class="card-title">
            {{asunto}} 
            <a href="{{BASE}}usuarios/create" class="btn btn-outline-secondary">Nuevo Usuario</a>
        </h1>
        {% include 'partials/_messages.twig' %}
        {% if usuarios %}
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Correo</th>
                        <th>Rol</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for model in usuarios %}
                        <tr>
                            <td>{{model.id}}</td>
                            <td>{{model.nombre}}</td>
                            <td>{{model.email}}</td>
                            <td>{{model.role.nombre}}</td>
                            <td>
                                <a href="{{BASE}}usuarios/show/{{model.id}}"
                                    class="btn btn-success btn-sm">Ver</a>
                                <a href="{{BASE}}usuarios/edit/{{model.id}}" 
                                    class="btn btn-warning btn-sm">Editar</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p class="text-info">{{mensaje}}</p>
        {% endif %}
    </div>
</div>

{% endblock %}